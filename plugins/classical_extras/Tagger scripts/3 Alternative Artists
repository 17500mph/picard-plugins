$noop(ARTIST SCRIPT FOR MUSO ETC. NB THIS SCRIPT REQUIRES THE "CLASSICAL_EXTRAS" PLUGIN)
$noop(This script sets the Artist tag from the performer tags in a style broadly consistent with SongKong, rather than using Composer)
$noop(Conductor and orchestra are excluded from artist as Muso shows separately)

$noop(Remove unwanted performer tags and creat sort tags)
$unset(performer:orchestra)
$unset(performer:choir)
$unset(performer:choir vocals)
$unset($if($in(%performer:%,%_caa_ensemble_names%),performer:))
$set(performer_sort,%_caa_soloists_sort%)


$setmulti(artists,$if2(%_caa_album_soloists%,%_caa_album_conductors%,%_caa_album_ensembles%,%_caa_soloists%,%_caa_conductor%,%_caa_ensembles%,%_caa_album_composers%))
$setmulti(artists_sort, $if2(%_caa_album_soloists_sort%,%_caa_album_conductors_sort%,%_caa_album_ensembles_sort%,%_caa_soloists_sort%,%_caa_conductor_sort%,%_caa_ensembles_sort%,%_caa_album_composers_sort%))) 
$set(artist,%artists%)
$set(artistsort,%artists_sort%)    

$noop(Make soloists and ensembles visible)
$set(soloists,%_caa_soloists%)  
$set(ensembles,%_caa_ensembles%)                    

$noop(CREATE ENSEMBLE TAG for Muso and LMS etc.)
$setmulti(band, %_caa_ensembles%)

$noop(Muso doesn't want album artist)
$unset(albumartist)
$unset(albumartistsort)

$noop(SET TRACKARTIST FOR LMS)
$set(trackartist,%_caa_soloists%)
$set(trackartistsort,%_caa_soloists_sort%)

$noop(FIX CYRILLIC SCRIPT COMPOSERS)
$setmulti(composer,%_caa_composer%)



$noop(Work-round for Muso not handling multi-valued conductor)
$set(conductor,%conductor%)

$set(stamp,%stamp% Alternative artist tags. )
